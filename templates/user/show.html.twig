{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Utilisateurs{% endblock %}

{% block body %}
    <div>
        <div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-lg">
            <!-- Section d'Image de Profil -->

            <!-- Informations Utilisateur -->
            <h1 class="text-3xl font-extrabold text-gray-800 mb-4 text-center">Utilisateur</h1>

        <p class="flex justify-center mb-3">
            {% if user.getProfileImage() %}
            <img src="/profile/images/{{ user.profileImage }}" alt="profile picture">
            {% else %}
                <img src="{{ asset('images/defaultProfilePicture.jpg') }}" alt="default profile picture">
            {% endif %}
        </p>

            <table class="min-w-full bg-white divide-y divide-gray-200">
                <tbody class="bg-white divide-y divide-gray-200">
                <tr>
                    <th class="py-2 px-4 text-left text-gray-600 font-medium">Pseudo</th>
                    <td class="py-2 px-4 text-gray-800">{{ user.pseudo }}</td>
                </tr>
                <tr>
                    <th class="py-2 px-4 text-left text-gray-600 font-medium">Nom</th>
                    <td class="py-2 px-4 text-gray-800">{{ user.lastName }}</td>
                </tr>
                <tr>
                    <th class="py-2 px-4 text-left text-gray-600 font-medium">Prénom</th>
                    <td class="py-2 px-4 text-gray-800">{{ user.firstName }}</td>
                </tr>
                <tr>
                    <th class="py-2 px-4 text-left text-gray-600 font-medium">Téléphone</th>
                    <td class="py-2 px-4 text-gray-800">{{ user.phone }}</td>
                </tr>
                <tr>
                    <th class="py-2 px-4 text-left text-gray-600 font-medium">Mail</th>
                    <td class="py-2 px-4 text-gray-800">{{ user.email }}</td>
                </tr>
                <tr>
                    <th class="py-2 px-4 text-left text-gray-600 font-medium">Site de rattachement :</th>
                    <td class="py-2 px-4 text-gray-800">{{ user.campus.name }}</td>
                </tr>
                </tbody>
            </table>

            <!-- Lien pour Modifier -->
            {% if user.id == app.user.id %}
                <div class="text-center mt-6">
                    <a href="{{ path('app_user_edit') }}" class="inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md transition-colors duration-300">
                        Modifier
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}



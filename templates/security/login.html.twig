{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Connexion{% endblock %}

{% block body %}
    <div class="registration-container max-w-4xl">
        <form method="post">
            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1>Connexion</h1>

            <div class="form-group">
                <label for="inputPseudo" class="form-label">Pseudo ou e-mail</label>
                <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-input" autocomplete="username" required autofocus>
            </div>

            <div class="form-group">
                <label for="inputPassword" class="form-label">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-input" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-group">
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me" class="form-checkbox"> Se souvenir de moi !
                    </label>
                </div>
            </div>

            <button class="form-button" type="submit">Connexion</button>

            {% if error %}
                <p>{{ error.message }}</p>

            {% endif %}

        </form>
        <a href="{{ path('app_forgot_password_request') }}">Réinitialiser le mot de passe</a>
    </div>
{% endblock %}

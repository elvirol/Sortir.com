{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center ">
        <div class="w-full max-w-md bg-white shadow-md rounded-lg p-6">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
                    <span class="block sm:inline">{{ flash_error }}</span>
                </div>
            {% endfor %}

            <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">Réinitialiser votre mot de passe</h1>

            {{ form_start(requestForm, {'attr': {'class': 'space-y-6'}}) }}
            <div class="mb-4">
                {{ form_row(requestForm.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
            </div>

            <div class="text-sm text-gray-600 mb-4">
                Saisissez votre adresse électronique et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </div>

            <div class="flex justify-center">
                <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition duration-300">
                    Continuer
                </button>
            </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}